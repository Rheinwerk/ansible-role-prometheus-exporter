{{ ansible_managed | comment }}

[Unit]
Description=Prometheus {{ prometheus_exporter_name }}
Documentation=https://github.com/{{ prometheus_exporter_github_org }}/{{ prometheus_exporter_github_repo }}
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{ prometheus_exporter_system_user }}
Group={{ prometheus_exporter_system_group }}
{% for key, value in prometheus_exporter_env_vars.items() %}
Environment="{{ key }}={{ value }}"
{% endfor %}
ExecStart={{ prometheus_exporter_install_dir }}/{{ prometheus_exporter_binary_name }} \
{% if prometheus_exporter_web_listen_flag is defined %}
    {{ prometheus_exporter_web_listen_flag }}={{ prometheus_exporter_listen_address }}:{{ prometheus_exporter_listen_port }} \
{% else %}
    --web.listen-address={{ prometheus_exporter_listen_address }}:{{ prometheus_exporter_listen_port }} \
{% endif %}
{% for arg in prometheus_exporter_extra_args %}
    {{ arg }}{% if not loop.last %} \{% endif %}

{% endfor %}

ExecReload=/bin/kill -HUP $MAINPID
SyslogIdentifier={{ prometheus_exporter_name }}
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
PrivateDevices=yes
ProtectHostname=yes
ProtectClock=yes
ProtectKernelTunables=yes
ProtectKernelModules=yes
ProtectKernelLogs=yes
ProtectControlGroups=yes
RestrictRealtime=yes
RestrictSUIDSGID=yes
{% if prometheus_exporter_config_dir is defined %}
ReadWritePaths={{ prometheus_exporter_config_dir }}
{% endif %}

[Install]
WantedBy=multi-user.target
